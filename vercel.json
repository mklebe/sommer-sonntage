{
  "version": 2,
  "$schema": "https://vercel.com/schema",
  "builds": [
      {
          "src": "/public/api/src/main.js",
          "use": "@vercel/node"
      },
      {
        "src": "apps/client/package.json",
        "use": "@vercel/static-build"
      }
  ],
  "buildCommand": "npm run build --workspace=apps/api",
  "routes": [
      {
          "src": "/api/(.*)",
          "dest": "/public/api/src/main.js",
          "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
          "headers": {
            "Access-Control-Allow-Origin": "*"
          }
      },
      {
        "src": "/(.*)",
        "dest": "/apps/client/dist/$1",
        "methods": ["GET", "OPTIONS"]
      }
  ]
}