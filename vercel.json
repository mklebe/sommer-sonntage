{
  "version": 2,
  "builds": [
      {
          "src": "src/main.ts",
          "use": "@vercel/node"
      },
      {
        "src": "apps/client",
        "use": "@vercel/static-build"
      }
  ],
  "routes": [
      {
          "src": "/api/(.*)",
          "dest": "src/main.ts",
          "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
          "headers": {
            "Access-Control-Allow-Origin": "*"
          }
      },
      {
        "src": "/(.*)",
        "dest": "apps/frontend/$1"
      }
  ]
}